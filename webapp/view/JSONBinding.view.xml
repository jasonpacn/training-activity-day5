<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sapips.training.jsonbinding.controller.JSONBinding">
    <Page id="page" title="{i18n>title}">
    
    <Panel xmlns="sap.m" id="panel01" headerText="Data Binding Basics" class="sapUiResponsiveMargin" width="auto">
        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form0">
        
            <sap.ui.layout.form:content>
                <Label text="EID" id="lblEID"/>
                <Input width="100%" id="txtEID" value="{info>/Eid}"/>
        
                <Label text="Enabled" id="lblEnabled"/>      
                <CheckBox xmlns="sap.m"  selected="{info>/Enabled}" id="cbEnabled" enabled="true"/>
            </sap.ui.layout.form:content>
        
        </sap.ui.layout.form:SimpleForm>
    </Panel>
    <Panel xmlns="sap.m" id="panel02" headerText="Address Details" class="sapUiResponsiveMargin" width="auto">
        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form1">
        
            <sap.ui.layout.form:content>
                <Label text="Address" id="lblAddress"/>
                <Text text="{info>/Address/Street} {info>/Address/Zip} {info>/Address/City} {info>/Address/Country}" 
                class="sapUiSmallMarginBottom" 
                id="txtAddress"/>
                
				<Link id="link01" 
					href="{ path: 'info>/Eid', formatter: '.formatter.formatMail'}"
					text="{i18n>sendEmail}"/>

                <Label text="Sales Amount" id="lblSA"/>
                <Input 
                width="100%" 
                class="sapUiSmallMarginBegin" 
                enabled="true" 
                description="{info>/CurrencyCode}" 
                value="{ parts: [{path:'info>/SalesAmount'}, {path:'info>/CurrencyCode'}], type:'sap.ui.model.type.Currency', formatOptions:{showMeasure:false} }"
                id="txtSA"/>

            </sap.ui.layout.form:content>
        
        </sap.ui.layout.form:SimpleForm>
        
    </Panel>
    <Panel xmlns="sap.m" id="aggregationBindingPanel" headerText="Aggregation Binding" class="sapUiResponsiveMargin" width="auto">
    <content>
		<List id="list001" 
            items="{products>/Products}" 
            mode="SingleSelectMaster"
            selectionChange=".onSelectProduct">
			<items>
				<ObjectListItem
                    id="objList001"
					type="Active"
					title="{products>ProductName}"
					number="{
						parts: [
							{path: 'products>UnitPrice'}
						],
						type: 'sap.ui.model.type.Currency',
						formatOptions: { showMeasure: false }
					}"
					numberUnit="{info>/CurrencyCode}">
					<attributes>
						<ObjectAttribute id="objAttribute001" title="{i18n>UnitPrice}" text="{products>QuantityPerUnit}"/>
                        <ObjectAttribute id="objAttribute002" title="{i18n>stockValue}" text="{products>UnitsInStock}"/>
					</attributes>
				</ObjectListItem>
			</items>
		</List>

    </content>  
    </Panel>

    <Panel xmlns="sap.m" id="productDetailsPanel" headerText="Product Details" class="sapUiResponsiveMargin" width="auto">
        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form2">
            <sap.ui.layout.form:content>
                <Label text="{i18n>ProductID}" id="lblProductID"/>
                <Input width="100%" value="{products>ProductID}" id="txtProductID"/>

                <Label text="{i18n>ProductName}" id="lblProductName"/>
                <Input width="100%" value="{products>ProductName}" id="txtProductName"/>

                <Label text="{i18n>QuantityPerUnit}" id="lblQuantity"/>
                <Input width="100%" value="{products>QuantityPerUnit}" id="txtQuantity"/>

                <Label text="{i18n>UnitPrice}" id="lblUnitPrice"/>
                <Input width="100%" value="{products>UnitPrice}" id="txtUnitPrice"/>

                <Label text="{i18n>UnitsInStock}" id="lblUnitsInStock"/>
                <Input width="100%" value="{products>UnitsInStock}" id="txtUnitsInStock"/>

                <Label text="{i18n>Discontinued}" id="lblDiscontinued"/>
                <Input width="100%" value="{products>Discontinued}" id="txtDiscontinued"/>
            </sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>
    </Panel>
    </Page>
</mvc:View>