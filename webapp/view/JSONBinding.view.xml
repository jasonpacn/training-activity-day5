<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sapips.training.jsonbinding.controller.JSONBinding">
    <Page id="page" title="{i18n>title}">
    
    <Panel xmlns="sap.m" id="panel01" headerText="Data Binding Basics" class="sapUiResponsiveMargin" width="auto">
        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form0">
        
            <sap.ui.layout.form:content>
                <Label text="EID" id="lblEID"/>
                <Input width="100%" id="txtEID"/>
        
                <Label text="Enabled" id="lblEnabled"/>      
                <CheckBox xmlns="sap.m"  selected="{info>/Enabled}" id="cbEnabled" enabled="true"/>
            </sap.ui.layout.form:content>
        
        </sap.ui.layout.form:SimpleForm>
    </Panel>
    <Panel xmlns="sap.m" id="panel02" headerText="Address Details" class="sapUiResponsiveMargin" width="auto">
        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form1">
        
            <sap.ui.layout.form:content>
                <Label text="Address" id="lblAddress"/>
                <Text text="{info>/Address/Street} {info>/Address/Zip} {info>/Address/City} {info>/Address/Country}" 
                class="sapUiSmallMarginBottom" 
                id="txtAddress"/>
                
                <Link 
                text="Send Email" 
                href="{ path: 'info>/EID', formatter: '.formatter.formatMail' }"
                class="sapUiSmallMarginBegin" 
                id="linkEmail"/>

                <Label text="Sales Amount" id="lblSA"/>
                <Input 
                width="100%" 
                class="sapUiSmallMarginBegin" 
                enabled="true" 
                description="{info>/CurrencyCode}" 
                value="{ parts: [{path:'info>/SalesAmount'}, {path:'info>/CurrencyCode'}], type:'sap.ui.model.type.Currency', formatOptions:{showMeasure:false} }"
                id="txtSA"/>

            </sap.ui.layout.form:content>
        
        </sap.ui.layout.form:SimpleForm>
        
    </Panel>
    <Panel xmlns="sap.m" id="panel03" headerText="Aggregation Binding" class="sapUiResponsiveMargin" width="auto">

    <content>
        <List id="productList" headerText="List" items="{/Product}">
            <items>
                <ObjectListItem
                    id="obj01"
                    title="{ProductName}"
                    number="{ parts: [ {path: 'UnitPrice'}, {path: 'info>/CurrencyCode'} ], type: 'sap.ui.model.type.Currency', formatOptions: { showMeasure: false } }"
                    numberUnit="{path: '/CurrencyCode'}"
                    type="Active"
                    press="onItemPress">

                    <attributes>
                        <ObjectAttribute id="obj02" text="{QuantityPerUnit}" />
                        <ObjectAttribute id="obj03" title="Current stock value" />
                        <ObjectAttribute id="obj04" text="{ parts:[ {path:'UnitPrice'}, {path:'UnitsInStock'}, {path:'/CurrencyCode'} ], formatter: '.formatter.formatStockValue' }" />
                    </attributes>
                </ObjectListItem>
            </items>
        </List>

    </content>  
    </Panel>

    <Panel xmlns="sap.m" id="panel04" headerText="Product Details" class="sapUiResponsiveMargin" width="auto">
        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form2">
            <sap.ui.layout.form:content>
                <Label text="Product ID" id="lblProductID"/>
                <Input width="100%" value="{productDetail>/ProductID}" id="txtProductID"/>

                <Label text="Product Name" id="lblProductName"/>
                <Input width="100%" value="{productDetail>/ProductName}" id="txtProductName"/>

                <Label text="Quantity Per Unit" id="lblQuantity"/>
                <Input width="100%" value="{productDetail>/QuantityPerUnit}" id="txtQuantity"/>

                <Label text="Unit Price" id="lblUnitPrice"/>
                <Input width="100%" value="{productDetail>/UnitPrice}" id="txtUnitPrice"/>

                <Label text="Units in Stock" id="lblUnitsInStock"/>
                <Input width="100%" value="{productDetail>/UnitsInStock}" id="txtUnitsInStock"/>

                <Label text="Discontinued" id="lblDiscontinued"/>
                <Input width="100%" value="{productDetail>/Discontinued}" id="txtDiscontinued"/>
            </sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>
    </Panel>
    </Page>
</mvc:View>